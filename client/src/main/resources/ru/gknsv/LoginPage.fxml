<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="backColor" stylesheets="@Background.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gknsv.controllers.LoginPage">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="110.0" prefHeight="400.0" prefWidth="379.0" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label styleClass="sample" stylesheets="@Fonts.css" text="Вход">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></Label>
            <TextField fx:id="loginField" prefHeight="26.0" prefWidth="535.0" promptText="Логин" styleClass="text-field" stylesheets="@TextFields.css">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></TextField>
            <PasswordField fx:id="passwordField" promptText="Пароль" styleClass="text-field" stylesheets="@TextFields.css">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></PasswordField>
            <Button mnemonicParsing="false" onAction="#login" prefHeight="38.0" prefWidth="100.0" stylesheets="@Buttons.css" text="Войти">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <styleClass>
                  <String fx:value="button-30" />
                  <String fx:value="button-20" />
               </styleClass></Button>
            <Button mnemonicParsing="false" onAction="#toAuthorizationPage" prefHeight="38.0" prefWidth="100.0" stylesheets="@Buttons.css" text="Назад">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <styleClass>
                  <String fx:value="button-30" />
                  <String fx:value="button-20" />
               </styleClass></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
